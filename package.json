{
  "name": "tw-stock-telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot to query real-time TW stock quotes, charts, news, and other related information.",
  "main": "index.js",
  "scripts": {
    "build": "docker build --no-cache -t tw-stock-telegram-bot .",
    "start": "docker run -it --rm tw-stock-telegram-bot",
    "dev": "nodemon",
    "prettier:check": "prettier --check './**/*.{js,json}' && echo \"âœ… Prettier validated\"",
    "prettier:write": "prettier --write './**/*.{js,json}'",
    "lint": "eslint './**/*.js'",
    "lint:fix": "eslint './**/*.js' --fix",
    "test": "jest --coverage"
  },
  "author": "YY",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "isomorphic-fetch": "^2.2.1",
    "node-telegram-bot-api": "^0.50.0",
    "puppeteer": "^5.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "eslint": "^7.8.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1"
  },
  "lint-staged": {
    "*.js": [
      "npm run prettier:check",
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  }
}
